<div class="page-center">
  <div class="page-center-in">
    <div class="container-fluid">
      <div class="authform">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form',  :class => "sign-box "}) do |f| %>
          <%= devise_error_messages! %>
          <div class="sign-avatar">
              <%= image_tag("avatar-sign.png") %>
          </div>
          <header class="sign-title">Sign In</header>

          <div class="form-group">
            <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            <div class="checkbox float-left">
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                 <label for="signed-in">Keep me signed in</label>
              <% end -%>
            </div>
            <div class="float-right reset">
              <%- if devise_mapping.recoverable? %>
                <%= link_to "Forgot password?", new_password_path(resource_name) %>
              <% end -%>
            </div>
          </div>
          <%= f.submit 'Sign in', :class => 'btn btn-rounded' %>
          <p class="sign-note">New to our website? 
            <%- if devise_mapping.registerable? %>
              <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
            <% end -%>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
