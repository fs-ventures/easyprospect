<body style="background: url(http://vestedworld.com/app/uploads/2016/03/1-1600x870.jpg); background-size: cover;">

  <div class="page-center">
    <div class="page-center-in">
      <div class="container-fluid authform">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form', :class => "sign-box no-padding "}) do |f| %>

          <%= devise_error_messages! %>

            <div class="signup-header padding-20 bgcolor-light-grey">
              <header class="sign-title no-margin">
                <h3 class="no-margin">Join our Community</h3>
                <h5 class="text-muted no-margin">Takes just a few minutes.</h5>
              </header>
            </div>
            <hr class="no-margin"/>

            <div class="signup-body padding-20">

              <!-- <p class="text-center">
                <a href="#" class="" data-target="#select" data-toggle="tab">
                  (Change Profile)
                </a>
              </p>  -->

              <div class="form-group">
                <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
              </div>

              <hr/>


              <div class="form-group">
                <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: "Full Name" %>
              </div>
              <div class="form-group">
                <%= f.email_field :email, class: 'form-control', placeholder: "E-Mail" %>
              </div>
              <div class="form-group">
                  <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
              </div>
              <div class="form-group">
                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirmation" %>
              </div>
            </div>

            <hr class="no-margin"/>

            <div class="signup-footer padding-20 bgcolor-light-grey">
              <div class="form-group">
                <div class="checkbox float-left">
                  <input type="checkbox" id="signed-in"/>
                  <label for="signed-in">
                    I agree to the <a href="#"><u>Terms of Use</u></a>
                    and confirm that I am and accredited Investor.
                  </label>
                </div>
              </div>

              <div class="row">
                <!-- <div class="col-sm-6">
                  <a href="#" class="btn btn-rounded" data-target="#select" data-toggle="tab">Back</a> 
                </div> -->
                <div class="col-sm-12">
                  <%= f.submit 'Create a Free Account', :class => 'btn btn-rounded btn-block' %>
                </div>
              </div>
            </div>
          </div>

          <hr class="no-margin"/>

          <div class="signup-footer padding-20 bgcolor-light-grey">
            <%#= link_to 'View Companies', page_path('companies'), class: "btn btn-rounded btn-default" %>
            <p class="sign-note no-margin">
                Already have an account? <%= link_to 'Sign in', new_user_session_path %>
            </p>
            <!--<button type="button" class="close">
                <span aria-hidden="true">&times;</span>
            </button>-->
          </div>

          </div>

        <% end %>
      </div>
    </div>
  </div>

