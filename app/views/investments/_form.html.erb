<%= form_for(@investment) do |f| %>
  <% if @investment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@investment.errors.count, "error") %> prohibited this investment from being saved:</h2>

      <ul>
      <% @investment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h4>General</h4>

  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: "Investment Title" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description , class: "form-control" , placeholder: "Description" %>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      <%= f.number_field :company_id , class: "form-control", placeholder: "Company ID" %>
    </div>
    <div class="col-md-5">
      <%= f.text_field :industry ,class: "form-control" , placeholder: "Industry" %>
    </div>
     <div class="col-md-4">
      <%= f.text_field :stage , class: "form-control" , placeholder: "Product Stage" %>
    </div>
  </div>
 
  <hr/>
  <h4>Investment Product</h4>
  <div class="form-group">
    <%= f.select(:type, Investment.types.keys.map {|type| [type.titleize,type]}) %>
  </div>
  <div class="form-group row">
    <div class="col-md-4">
      <%= f.number_field :size , class: "form-control", placeholder: "Amount" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-4">
      <%= f.number_field :type , class: "form-control", placeholder: "Type" %>
    </div>
    <div class="col-md-4">
      <%= f.number_field :revenue_share , class: "form-control", placeholder: "Revenue Share" %>
    </div>
    <div class="col-md-4">
      <%= f.number_field :expected_return , class: "form-control", placeholder: "Expected Return" %>
    </div>
  </div>
  <hr/>
  <h4>Timing</h4>
  <div class="form-group row">
    <div class="col-md-6">
      <%= f.date_select :start_date , class: "form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.date_select :end_date , class: "form-control" %>
    </div>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
  <br/><br/>
<% end %>
