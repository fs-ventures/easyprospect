<div class="page-content">
  <header class="page-content-header">
    <div class="container-fluid">
      <div class="tbl">
        <div class="tbl-row">
          <div class="tbl-cell">
            <h3>Investments <small class="text-muted m-l"><%= Investment.count %></small></h3>
          </div>
          <div class="tbl-cell tbl-cell-action">
            <%= link_to 'New Investment', new_investment_path, class: "btn btn-rounded" %>
          </div>
        </div>
      </div>
    </div>
  </header><!--.page-content-header-->  

  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th width="30%">Description</th>
          <th>Size</th>
          <th>Type</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Industry</th>
          <th>Stage</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @investments.each do |investment| %>
          <tr>
            <td>
              <h5 class="no-margin"><%= investment.title %></h5>
              <p><%= investment.description %></p>
              <p><%= investment.company_id %></p>
            </td>
            <td>$<%= investment.size %></td>
            <td><%= investment.type %></td>
            <td><%= investment.start_date %></td>
            <td><%= investment.end_date %></td>
            <td><%= investment.industry %></td>
            <td><%= investment.stage %></td>
            <td><%= investment.location %></td>
            <td>
              <%= link_to 'Show', investment %></br/>
              <%= link_to 'Edit', edit_investment_path(investment) %><br/>
              <%= link_to 'Destroy', investment, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%#= link_to 'New Investment', new_investment_path %>

    <h3>Users</h3>
    <div class="column">
      <table class="table table-striped">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>

</div>