<div class="page-content">
  <div class="profile-header-photo" style="background: url(http://vestedworld.com/app/uploads/2016/03/3-1024x529.jpg);">
    <div class="profile-header-photo-in">
      <div class="tbl-cell">
        <div class="info-block">
          <div class="container">
            <div class="row">
              <div class="col-xl-9 col-xl-offset-3 col-lg-8 col-lg-offset-4 col-md-offset-0">
                <div class="tbl info-tbl">
                  <div class="tbl-row">
                    <div class="tbl-cell">
                      <p class="title"><%= @company.name %></p>
                      <p><%= @company.industry %></p>
                    </div>
                    <div class="tbl-cell tbl-cell-stat">
                      <div class="inline-block">
                        <p class="title">0</p>
                        <p>Followers</p>
                      </div>
                    </div>
                    <div class="tbl-cell tbl-cell-stat">
                      <div class="inline-block">
                        <p class="title">0</p>
                        <p>Photos</p>
                      </div>
                    </div>
                    <div class="tbl-cell tbl-cell-stat">
                      <div class="inline-block">
                        <p class="title">0</p>
                        <p>Videos</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= link_to company_path, type: "button", class: "change-cover" do %>
      <i class="font-icon "></i>
      View Company Profile
    <% end %>
  </div><!--.profile-header-photo-->

  <div class="container">
    <div class="row">
      <div class="col-xl-3 col-lg-4">
        <aside class="profile-side">
          <section class="box-typical profile-side-user">
            <button type="button" class="avatar-preview avatar-preview-128">
              <%= image_tag("http://nationsservice.wdfiles.com/local--files/file:mobiuslogo/mobiuslogo.jpg")%>
              <span class="update">
                <i class="font-icon font-icon-picture-double"></i>
                Update photo
              </span>
              <input type="file"/>
            </button>
            <button type="button" class="btn btn-rounded">Follow</button>
            <div class="btn-group">
              <button type="button"
                      class="btn btn-rounded btn-primary-outline dropdown-toggle"
                      data-toggle="dropdown"
                      aria-haspopup="true"
                      aria-expanded="false">
                I am Interested
              </button>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="#"><span class="font-icon font-icon-money"></span>I want to invest</a>
                <a class="dropdown-item" href="#"><span class="font-icon font-icon-bookmark-o"></span>Send me updates</a>
                <a class="dropdown-item" href="#"><span class="font-icon font-icon-connectdevelop"></span>I want to work with this company</a>
                <a class="dropdown-item" href="#"><span class="font-icon font-icon-product-hunt"></span>I love the product</a>
                <a class="dropdown-item" href="#"><span class="font-icon font-icon-industry"></span>I like this industry</a>
              </div>
            </div>
            <div class="bottom-txt">[Placeholder text]</div>
          </section>

          <section class="box-typical profile-side-stat">
            <div class="tbl">
              <div class="tbl-row">
                <div class="tbl-cell">
                  <span class="number">0</span>
                  Founders
                </div>
                <div class="tbl-cell">
                  <span class="number">[Pre-MVP]</span>
                  Stage
                </div>
              </div>
            </div>
          </section>

            <section class="box-typical">
            <header class="box-typical-header-sm bordered">Company Overview</header>
            <div class="box-typical-inner">
              <p class="line-with-icon">
                <i class="font-icon font-icon-calend"></i>
                Joined [timestamp]
              </p>
              <p class="line-with-icon">
                <i class="font-icon font-icon-pin-2"></i>
                [location]<br/>
                <small class="text-muted">Corporate Headquarters</small>
              </p>
              <p class="line-with-icon">
                <i class="font-icon font-icon-users-two"></i>
                [database pull]<br/> 
                <small class="text-muted">Founder and CEO</small>
              </p>
              <p class="line-with-icon">
                <i class="font-icon font-icon-earth"></i>
                <a href="http://www.mobiusmotors.com/">Company Website</a>
              </p>              
              <p class="line-with-icon">
                <i class="font-icon font-icon-case-3"></i>
                <%= @company.industry %>
              </p>
            </div>
          </section>
        </aside><!--.profile-side-->
      </div>

      <div class="col-xl-9 col-lg-8">
        <section class="tabs-section">
          <div class="tabs-section-nav tabs-section-nav-left">
            <ul class="nav" role="tablist">
              <li class="nav-item">
                <a class="nav-link" href="#activity" role="tab" data-toggle="tab">
                  <span class="nav-link-in">Corporate Overview</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="#about" role="tab" data-toggle="tab">
                  <span class="nav-link-in">About</span>
                </a>
              </li>
               <li class="nav-item">
                <a class="nav-link" href="#social" role="tab" data-toggle="tab">
                  <span class="nav-link-in">Social, Media & Press</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#financials" role="tab" data-toggle="tab">
                  <span class="nav-link-in">Financials</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#team" role="tab" data-toggle="tab">
                  <span class="nav-link-in">Team</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#dataroom" role="tab" data-toggle="tab">
                  <span class="nav-link-in">Data Room</span>
                </a>
              </li>
            </ul>
          </div><!--.tabs-section-nav-->

          <div class="tab-content no-styled profile-tabs">
            <!-- corporate activity -->
            <div role="tabpanel" class="tab-pane" id="activity">
              <section class="box-typical box-typical-padding p-b">
              	<br/>
              	
                <h4 class="">Our Vision</h4>
                <h5 class="text-primary">Tell us about your company</h5>
              	<textarea class="form-control text-left" rows="8">
              	</textarea>
                
                <br/>
                <hr/>
                <br/>
                
                <h5 class="text-primary">What problem are you solving?</h5>
                <textarea class="form-control text-left" rows="8">
              	</textarea>
                
                <br/>
                <hr/>
                <br/>
                
                <h5 class="text-primary">What is your solution?</h5>
                 <textarea class="form-control text-left" rows="8">
              	</textarea>


                <br/>
                <hr/>
                <br/>
                
                <h5 class="text-primary">How will your company accomplish social and evnironmental impact?</h5>
                 <textarea class="form-control text-left" rows="8">
                </textarea>
              </section><!--.box-typical-->

              <br/><br/>

            </div><!--.tab-pane-->

            <!-- about-->
            <div role="tabpanel" class="tab-pane active fade in" id="about">
              <section class="box-typical box-typical-padding">
                <%= render 'form' %>
              </section>
            </div><!--.tab-pane-->

            <!-- Social-->
            <div role="tabpanel" class="tab-pane" id="social">
              <section class="box-typical box-typical-padding">
                Social
              </section>
            </div><!--.tab-pane-->


            <!-- Financials-->
            <div role="tabpanel" class="tab-pane" id="team">
              <section class="box-typical box-typical-padding">
                Team
              </section>
            </div><!--.tab-pane-->

            <!-- Financials-->
            <div role="tabpanel" class="tab-pane" id="financials">
              <section class="box-typical box-typical-padding">
                Financials
              </section>
            </div><!--.tab-pane-->


            <!-- Financials-->
            <div role="tabpanel" class="tab-pane" id="dataroom">
              <section class="box-typical box-typical-padding">
                Data Room
              </section>
            </div><!--.tab-pane-->



          </div><!--.tab-content-->
        </section><!--.tabs-section-->
      </div>
    </div><!--.row-->
  </div><!--.container-fluid-->
</div><!--.page-content-->
