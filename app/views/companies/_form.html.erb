<%= form_for(@company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h5 class="bold">General</h5>
  <div class="form-group row">
    <div class="col-md-6">
      <%= f.text_field :name, class: 'form-control', placeholder: "Company Name" %>
    </div>
    <div class="col-md-6">
      <%= f.text_field :industry, class: 'form-control' , placeholder: "Industry" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-4">
      <input type="text" class="form-control" placeholder="No. of Founders"/>
    </div>
    <div class="col-md-4">
      <input type="text" class="form-control" placeholder="Geographic Focus"/>
    </div>
    <div class="col-md-4">
      <input type="text" class="form-control" placeholder="Product Stage"/>
    </div>
  </div>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Website"/>
  </div>
  <div class="form-group row">
    <div class="col-md-4">
      <input type="text" class="form-control" placeholder="Place of Incorporation"/>
    </div>
    <div class="col-md-3">
      <input type="text" class="form-control" placeholder="No. of Employees"/>
    </div>
  </div>

  <hr/>  

  <h5 class="bold">Social Profiles</h5>
  <div class="form-group row">
    <div class="col-md-12">
      <input type="text" class="form-control" placeholder="AngelList Profile"/>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-12">
      <input type="text" class="form-control" placeholder="Linkedin Profile"/>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-12">
      <input type="text" class="form-control" placeholder="Twitter Profile"/>
    </div>
  </div>
   <div class="form-group row">
    <div class="col-md-12">
      <input type="text" class="form-control" placeholder="Facebook Profile"/>
    </div>
  </div>

  <hr/>  

  <h5 class="bold">Company Overview</h5>
  

  <div class="form-group row">
    <div class="col-md-3">
      Brief Description<br/>
      <small class="text-muted">Elevator Pitch</small>
    </div>
    <div class="col-md-9">
      <textarea rows="4" class="form-control" placeholder="Elevator Pitch">
        
      </textarea>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      Stage of Growth
      <small class="text-muted">Investment Status</small>
    </div>
    <div class="col-md-9">
      <textarea rows="4" class="form-control" placeholder="Elevator Pitch">
        
    </textarea>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-3">
      Growth Projections
      <small class="text-muted">Return Expectations</small>
    </div>
    <div class="col-md-9">
      <textarea rows="4" class="form-control" placeholder="">
      </textarea>
    </div>
  </div>

  <br/>

  <div class="form-group row">
    <div class="col-md-9">
      Upload Powerpoint Deck and Financials
    </div>
    <input>
  </div>

  <hr>

  <h5 class="bold">Raising Capital</h5>
  <div class="form-group row">
    <div class="col-md-6">
      <input type="text" class="form-control" placeholder="Amount"/>
    </div>
    <div class="col-md-6">
      <input type="text" class="form-control" placeholder="Type"/>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <input type="text" class="form-control" placeholder="Tax Structure"/>
    </div>
    <div class="col-md-6">
      <input type="text" class="form-control" placeholder="Amount Raised to date"/>
    </div>
  </div>

  <hr/>
  <div class="form-group">
    <p class="text-right">
      <%= f.submit "Update Company", class: "btn btn-rounded btn-primary sign-up " %>
    </p>
  </div>
<% end %>
